@model IEnumerable<MVC5_Otomasyon.Models.Classes.Kategori>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h4 style="margin-top:20px; text-align:center; color:green">Kategori Listesi</h4>


<table id="table"
       data-toggle="table"
       data-toolbar="#toolbar"
       data-show-export="true"
       data-pagination="true"
       data-search="true"
       data-maintain-selected="true"
       data-page-size="15"
       data-page-list="[5, 10, 20, 40, 50, 100, ALL]"
       data-export-options='{
         "fileName": "test",
         "ignoreColumn": ["state"]
       }'>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.KategoriID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KategoriAd)
            </th>
            <th></th>

        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.KategoriID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KategoriAd)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.KategoriID }) |
                @Html.ActionLink("Details", "Details", new { id = item.KategoriID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.KategoriID })
            </td>

        </tr>
    }
</table>

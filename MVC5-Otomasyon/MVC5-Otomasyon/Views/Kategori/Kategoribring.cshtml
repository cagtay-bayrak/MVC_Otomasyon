@model MVC5_Otomasyon.Models.Classes.Kategori
@{
    ViewBag.Title = "Kategoribring";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@*<h2>Kategori</h2>*@

@using (Html.BeginForm("KategoriUpdate","Kategori",FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4 style="margin-top:20px;">Kategori Günelle</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.KategoriAd, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-9">
                @Html.EditorFor(model => model.KategoriAd, new { htmlAttributes = new { @class = "form-control", @placeholder = "Kategori Ad Giriniz" } }) @*required = "required",*@
                @Html.ValidationMessageFor(model => model.KategoriAd, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.KategoriID) 
                @*//update için id bilgisini al, hidden*@
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Güncelle" class="btn btn-success" />
            </div>
        </div>
    </div>
}
<div class="form-horizontal">
    <div class="form-group">
        <div class="col-md-9">
            @Html.ActionLink("Geri Dön", "Index")
        </div>
    </div>
</div>